{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "CloudinarySettings": {
    "CloudName": "dmwlmdigc",
    "ApiKey": "",
    "ApiSecret": "nvk-"
  },
  "ConnectionStrings": {
    "DefaultConnection": "User Id=postgres.ngfgtlfzrajjwrffhnlp;Password=f-*;Server=aws-0-eu-north-1.pooler.supabase.com;Port=5432;Database=postgres",
    "Redis": "redis:6379"
  },
  "Serilog": {
    // Hangi sink'leri (log hedefleri) kullanacağımızı belirtiyoruz
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],

    // Minimum log seviyesi (global default)
    "MinimumLevel": {
      "Default": "Information", // Trace > Debug > Information > Warning > Error > Fatal
      "Override": {
        "Microsoft": "Warning", // Microsoft iç logları Warning altını görmezden gel
        "System": "Warning"
      }
    },

    // Logların nereye yazılacağını tanımlar (birden fazla olabilir)
    "WriteTo": [
      //{
      //  "Name": "Console" // Konsola log basar
      //},
      {
        "Name": "File", // Normal tüm loglar (trace) dosyasına
        "Args": {
          "path": "../WeddingApp/log-.txt",
          "rollingInterval": "Day", // Her gün yeni dosya
          "fileSizeLimitBytes": 10485760, // 10 MB (10 * 1024 * 1024)
          "rollOnFileSizeLimit": true,
          "outputTemplate": "({TraceId}) [{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File", // Sadece Error ve üzeri için ayrı dosya
        "Args": {
          "path": "../WeddingApp/Error/error-.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760, // 10 MB (10 * 1024 * 1024)
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Error", // Sadece Error, Fatal
          "outputTemplate": "({TraceId}) [{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],

    // Ek bilgiler: MachineName, ThreadId gibi zenginleştiriciler
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],

    // Loglara sabit metadata ekle (her log entry’ye gömülür)
    "Properties": {
      "Application": "Wedding.API"
    }
  },
  "AllowedHosts": "*"
}
